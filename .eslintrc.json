{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 13
	},
	"rules": {
		// ðŸŒ¸ Error Level Rules
		"no-prototype-builtins": 0,
		"no-unused-vars": 1,
		"no-redeclare": 0,
		"no-useless-escape": 0,
		"no-mixed-spaces-and-tabs": 0,
		"no-useless-catch": 0,
		"no-empty": 0,
		"use-isnan": 0,
		"no-async-promise-executor": 0,
		"no-unreachable": 1,
		"no-fallthrough": 1,
		
		// ðŸ’« Warning Level Rules  
		"comma-dangle": 1,
		"semi": 1,
		"no-extra-semi": 1,
		
		// âœ¨ Style Rules
		"prefer-const": 1,
		"no-var": 1,
		
		// ðŸŽ€ Marina's Custom Rules
		"indent": ["warn", "tab"],
		"quotes": ["warn", "double"],
		"linebreak-style": ["error", "unix"],
		"curly": ["warn", "multi-line"],
		"brace-style": ["warn", "1tbs"],
		"comma-spacing": ["warn", { "before": false, "after": true }],
		"key-spacing": ["warn", { "beforeColon": false, "afterColon": true }],
		"keyword-spacing": ["warn", { "before": true, "after": true }]
	},
	"ignorePatterns": [
		"*.eta",
		"node_modules/",
		"temp/",
		"data/",
		"logs/",
		"*.log",
		"*.tmp",
		"*.temp"
	],
	"overrides": [
		{
			"files": ["*.js"],
			"rules": {
				"no-console": "warn"
			}
		},
		{
			"files": ["config*.json"],
			"rules": {
				"no-unused-vars": "off"
			}
		}
	]
}
